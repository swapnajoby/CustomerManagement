    if ('@ViewBag.NameSortParm' != '') {
        if ('@ViewBag.NameSortParm' == 'firstname_desc')
            $("#sortImage").attr("src", "/images/asc.jpeg");
        else
            $("#sortImage").attr("src", "/images/desc.jpeg");
